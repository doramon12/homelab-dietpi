# =============================================================================
# DOCKER ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and update all values
# Command: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Global Settings
# -----------------------------------------------------------------------------
TZ=America/Argentina/Buenos_Aires
PUID=1000
PGID=1000

# Network Configuration
RASPBERRY_NET_IP=192.168.88.250

# -----------------------------------------------------------------------------
# Pi-hole Configuration
# -----------------------------------------------------------------------------
PIHOLE_PASSWORD=CHANGEME
PIHOLE_SERVER_IP=192.168.88.250
PIHOLE_DNS=8.8.8.8,8.8.4.4
PIHOLE_VIRTUAL_HOST=pihole.cerq.local
PIHOLE_DNSSEC=true
PIHOLE_DNSMASQ_LISTENING=all

# Pi-hole API Access (for Glance and other integrations)
PIHOLE_URL=http://pihole:80
PIHOLE_USERNAME=pihole

# -----------------------------------------------------------------------------
# Speedtest Tracker Configuration
# -----------------------------------------------------------------------------
SPEEDTEST_APP_KEY=CHANGEME
SPEEDTEST_DB_CONNECTION=sqlite
SPEEDTEST_SCHEDULE=0 */3 * * *
SPEEDTEST_PRUNE_RESULTS_OLDER_THAN=365
SPEEDTEST_APP_URL=http://192.168.88.250:8094
SPEEDTEST_SERVERS=

# Speedtest API Access (for Glance and other integrations)
SPEEDTEST_URL=http://speedtest-tracker:80
SPEEDTEST_TRACKER_API_TOKEN=CHANGEME

# -----------------------------------------------------------------------------
# Nginx Proxy Manager Configuration
# -----------------------------------------------------------------------------
NPM_DB_SQLITE_FILE=/data/database.sqlite
NPM_DISABLE_IPV6=true

# -----------------------------------------------------------------------------
# Stirling PDF Configuration
# -----------------------------------------------------------------------------
STIRLING_PDF_DISABLE_ADDITIONAL_FEATURES=true
STIRLING_PDF_LANGS=es_AR

# -----------------------------------------------------------------------------
# FileBrowser Configuration
# -----------------------------------------------------------------------------
FILEBROWSER_USER=0
FILEBROWSER_GROUP=0

# -----------------------------------------------------------------------------
# Monitoring Stack Configuration
# -----------------------------------------------------------------------------
# Telegraf
TELEGRAF_UID=telegraf
TELEGRAF_GID=993

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000

# InfluxDB
INFLUXDB_PORT=8086
INFLUXDB_URL=http://influxdb2:8086
INFLUXDB_TOKEN=CHANGEME
INFLUXDB_ORG=Cerq
INFLUXDB_BUCKET=telegraf

# -----------------------------------------------------------------------------
# Glance Dashboard Configuration
# -----------------------------------------------------------------------------
# Glance uses the Pi-hole and Speedtest variables defined above

# -----------------------------------------------------------------------------
# Security Notes
# -----------------------------------------------------------------------------
# 1. Never commit this file with real secrets to version control
# 2. Keep a secure backup of this file
# 3. Use strong, unique passwords for all CHANGEME values
# 4. Consider using Docker secrets for production environments
# =============================================================================
